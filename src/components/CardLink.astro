---
const { title, href, icon } = Astro.props;
---

<a href={href} class="card-link">
  <svg><use href={icon}></use></svg>
  <h3>{title}</h3></a
>

<style>
  .card-link {
    display: flex;
    text-align: center;
    flex-direction: column;
    align-items: center;
    border: 3px solid var(--la-well-green);
    border-radius: 10px;
    padding: 1rem 0.8rem;
    max-width: 500px;
    overflow: hidden;
    min-height: 100%;
    gap: 1rem;

    :is(h3) {
      margin: 0;
    }

    :is(svg) {
      fill: var(--la-well-green);
    }

    &:hover {
      border-color: var(--la-well-green-lighter);
      text-decoration: none;

      :is(h3) {
        color: var(--la-well-green-lighter);
      }

      :is(svg) {
        fill: var(--la-well-green-lighter);
      }
    }
    @media (min-width: 780px) {
      max-width: 250px;
      max-width: none;
    }
  }
</style>

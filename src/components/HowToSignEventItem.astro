---
import { astroI18n, t, l } from "astro-i18n";

const { langCode } = astroI18n;
const { href, lang, location, dateStart, dateEnd } = Astro.props;
---

<li>
  <a href={href} target="_blank">{lang[langCode].name}</a><br />
  <span>{location}</span>
  <span
    >{
      Intl.DateTimeFormat(`${astroI18n.langCode}-CA`, {
        year: "numeric",
        month: "long",
        day: "numeric",
        hour: "numeric",
        timeZome: "UTC",
      }).formatRange(dateStart, dateEnd)
    }</span
  ><br />
</li>

<style>
  li {
    list-style: none;
  }
</style>

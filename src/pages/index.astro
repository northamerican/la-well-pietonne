---
import { astroI18n, t, l } from "astro-i18n";

import Layout from "../components/Layout.astro";
import ProgressSteps from "../components/ProgressSteps.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import StayConnected from "../components/StayConnected.astro";
import CardLinks from "../components/CardLinks.astro";
import CardLink from "../components/CardLink.astro";

astroI18n.init(Astro);
---

<Layout title={null}>
  <Header />
  <main>
    <section>
      <h2>{t("completeHeading")}</h2>
      <p style="white-space: pre-line;">{t("completeBody")}</p>
    </section>

    <section id="progress-steps">
      <h2>{t("stepsHeading")}</h2>
      <ProgressSteps />
    </section>

    <section>
      <CardLinks>
        <CardLink
          href={l("questions-reponses")}
          icon="/img/icons/q-a.svg#Layer_1"
          title={t("questionsAndAnswersHeading")}
        />
        <CardLink
          href={l("boite-a-idees")}
          icon="/img/icons/ideas.svg#Layer_1"
          title={t("shareAnIdeaHeading")}
        />
        <CardLink
          href={l("a-travers-le-monde")}
          icon="/img/icons/around-the-world.svg#Layer_1"
          title={t("aroundTheWorldHeading")}
        />
        <CardLink
          href={l("petition")}
          icon="/img/icons/petition-text.svg#Layer_1"
          title={t("petitionTextHeading")}
        />
      </CardLinks>
    </section>

    <section id="stay-connected">
      <h2>{t("stayConnected")}</h2>
      <StayConnected />
    </section>
  </main>
  <Footer />
</Layout>

<style>
  section > h2 {
    margin-top: 0;
  }
</style>
